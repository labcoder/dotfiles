#aliases-----------------------------------------------------------------------
alias la='ls -a'
alias lA='ls -A'
alias ll="ls -l"
alias lr='ls -r'
alias lR='ls -R'
alias cl='clear'
alias e='exit'
alias ..='cd ..'
alias gits='git status'
alias add='git add'
alias push='git push'
alias pull='git pull'
alias commit='git commit'

#color scheme on terminal------------------------------------------------------
export CLICOLOR=1
export LSCOLORS=ExFxCxDxBxegedabagacad
[[ -s "$HOME/.rvm/scripts/rvm" ]] && source "$HOME/.rvm/scripts/rvm"

#bash techniques to make it better---------------------------------------------
export HISTCONTROL=ignoreboth
